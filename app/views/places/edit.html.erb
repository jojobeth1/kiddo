<%= form_for @place do |f| %>
<div class="container">
  <h1>Update Place</h1>
  <div class="form-group">
    <label>Place Name</label>
    <%= f.text_field :name%>
  </div>
  <div class="form-group">
    <label>City</label>

<%= f.select :city_id, @cities.collect{ |city| [city.name, city.id] } %>

  </div>
  <div class="form-group">
    <label>Address</label>
    <%= f.text_area :address, placeholder: "enter address" %>
  </div>
  <div class="form-group">
    <label>Hours</label>
    <%= f.text_field :hours %>
  </div>
  <div class="form-group">
    <label>Phone</label>
    <%= f.text_field :phone %>
  </div>
  <div class="form-group">
    <label>Website</label>
    <%= f.text_field :url %>
  </div>
    <label>About</label>
    <%= f.text_area :about %>
  <div class="actions">

    <%= f.submit "Submit", class: "btn" %>
  </div>
</div>
<% end %>
