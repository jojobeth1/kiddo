<% user = current_user %>
<% is_owner = user ? user.id == @user.id : false %>
   <div>
     <% if is_owner %>
       <div class="new-post-button" style="margin-bottom:25px;">
         <%= button_to "New Place", new_place_path, method: :get, class: "btn btn-primary" %>
       </div>
       <p>
         Click "New Place" to add a great place to take a kid.
       </p>
     <% end %>
   </div>

   <div class="place">


       <% @places.each do |place| %>
         <h4><%= link_to "#{place.name}", place_path(place.id) %></h4>


     <% end %>
   </div>

</div>
